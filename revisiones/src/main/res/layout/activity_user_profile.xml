<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_fifth"
    android:orientation="vertical"
  >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarUser"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/gray_primary"
            android:tag="toolbarUserProfile"
            app:popupTheme="@style/AppTheme.PopupOverlay">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/changeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_title_bg"
                android:padding="@dimen/padding_card_title"
                android:tag="nombre"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="@integer/layout_weight_sum_equal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/layout_weight_equal"
                    android:padding="@dimen/padding_card_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/title_text_size"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tv_user_name_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/layout_weight_equal"
                    android:gravity="center"
                    android:padding="@dimen/padding_card_title"
                    android:tag="cambiar"
                    android:textAllCaps="true"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/action_text_size"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/changeEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_title_bg"
                android:padding="@dimen/padding_card_title"
                android:tag="correo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/title_text_size"
                android:textStyle="bold"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="@integer/layout_weight_sum_equal">

                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/layout_weight_equal"
                    android:padding="@dimen/padding_card_title"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/title_text_size"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tv_user_email_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/layout_weight_equal"
                    android:gravity="center"
                    android:padding="@dimen/padding_card_title"
                    android:tag="cambiar"
                    android:textAllCaps="true"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/action_text_size"
                    android:textStyle="bold"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>